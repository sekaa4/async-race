{
  "plugins": [
    "@typescript-eslint",
    "prettier",
    "import"
  ],
  "extends": [
    "prettier",
    "plugin:prettier/recommended",
    "airbnb-base",
    "airbnb-typescript/base",
    "airbnb-typescript-prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "ignorePatterns": [
    "webpack.config.js",
    "postcss.config.js"
  ],
  "rules": {
    "no-debugger": "off",
    "no-console": 1,
    "class-methods-use-this": "off",
    // "import/no-cycle": [
    //   [
    //     2,
    //     {
    //       "maxDepth": 1
    //     }
    //   ]
    // ],
    "@typescript-eslint/no-explicit-any": "error",
    "@typescript-eslint/no-var-requires": "warn"
  },
  "root": true
}
